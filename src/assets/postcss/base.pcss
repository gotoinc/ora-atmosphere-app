/* Common styles */
html {
    scroll-behavior: smooth;
}

body {
    font-family: 'Mulish', sans-serif;
    font-weight: 400;
    right: 0;
}

.cont {
    max-width: 1823px;
    margin: 0 auto;
    padding: 0 16px;
}

#app {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overflow: hidden;
}

h2 {
    font-size: 2.5rem;
    font-weight: 700;
}

.hover-link {
    padding-bottom: 2px;
    cursor: pointer;
    transition: color 0.3s ease;
    position: relative;

    &:before {
        content: '';
        position: absolute;
        width: 0;
        height: 1px;
        right: 0;
        bottom: 0;
        transition: 0.3s ease;
        background: #fff;
    }

    &:hover {
        color: #fff;

        &:before {
            width: 100%;
            left: 0;
            right: auto;
        }
    }
}

.actions {
    top: calc(100% + 8px);
    min-width: 177px;
    animation: fade-up 0.3s ease;

    li {
        cursor: pointer;
    }

    .link {
        @apply block px-4 py-2.5 text-white-100 transition-colors hover:bg-grey-200;
    }
}

@keyframes fade-up {
    0% {
        opacity: 0;
        transform: translateY(-20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

.tooltip {
    @apply rounded-lg bg-white-100 px-4 py-2.5 text-left text-base text-dark opacity-0 transition-all;
}

select {
    -webkit-appearance: none;
    -moz-appearance: none;
}

.input {
    @apply w-full rounded-[32px] border border-solid border-grey-100 bg-transparent px-6 py-2.5 text-base text-dark outline-none transition-all hover:border-grey-200 focus:border-grey-200;

    &::placeholder {
        @apply text-grey-100;
    }
}

svg {
    fill: currentColor;
}

.white-variant {
    .input {
        @apply border-white-100 !text-white-100 hover:border-white-75 focus:border-white-75;

        &::placeholder {
            @apply text-white-50;
        }

        &.with-icon {
            @apply pr-11;
        }
    }

    .icon-password {
        @apply hover:!text-white-100;
    }
}

/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

/* Firefox */
input[type='number'] {
    -moz-appearance: textfield;
}

input {
    border-radius: 0;
}

/* Vue toast */
.Vue-Toastification__toast--error {
    @apply bg-error;
}
